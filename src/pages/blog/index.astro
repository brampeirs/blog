---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const [featuredPost, ...otherPosts] = posts;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <!-- Page Header -->
      <header class="page-header">
        <h1>Blog</h1>
        <p>Thoughts on Angular, web development, and software engineering.</p>
      </header>

      <!-- Featured Post -->
      {
        featuredPost && (
          <section class="featured-section">
            <a href={`/blog/${featuredPost.id}/`} class="featured-card">
              {featuredPost.data.heroImage && (
                <div class="featured-image">
                  <Image
                    width={1200}
                    height={600}
                    src={featuredPost.data.heroImage}
                    alt=""
                  />
                  <span class="featured-badge">Latest</span>
                </div>
              )}
              <div class="featured-content">
                <div class="featured-meta">
                  <FormattedDate date={featuredPost.data.pubDate} />
                </div>
                <h2 class="featured-title">{featuredPost.data.title}</h2>
                <p class="featured-description">
                  {featuredPost.data.description}
                </p>
                <span class="read-more">
                  Read article
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M5 12h14M12 5l7 7-7 7" />
                  </svg>
                </span>
              </div>
            </a>
          </section>
        )
      }

      <!-- Other Posts Grid -->
      {
        otherPosts.length > 0 && (
          <section class="posts-section">
            <h3 class="section-title">More Articles</h3>
            <div class="posts-grid">
              {otherPosts.map((post) => (
                <article class="post-card">
                  <a href={`/blog/${post.id}/`}>
                    {post.data.heroImage && (
                      <div class="post-image">
                        <Image
                          width={720}
                          height={360}
                          src={post.data.heroImage}
                          alt=""
                        />
                      </div>
                    )}
                    <div class="post-content">
                      <div class="post-meta">
                        <FormattedDate date={post.data.pubDate} />
                      </div>
                      <h4 class="post-title">{post.data.title}</h4>
                      <p class="post-description">{post.data.description}</p>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          </section>
        )
      }
    </main>
    <Footer />
  </body>
</html>

<style>
  .page-header {
    text-align: center;
    padding: 3rem 0 4rem;
  }

  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-header p {
    font-size: 1.125rem;
    color: rgb(var(--gray));
    margin: 0;
  }

  /* Featured Post */
  .featured-section {
    margin-bottom: 4rem;
  }

  .featured-card {
    display: block;
    text-decoration: none;
    background: rgb(var(--surface));
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-base);
  }

  .featured-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl), var(--shadow-glow);
  }

  .featured-image {
    position: relative;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .featured-card:hover .featured-image img {
    transform: scale(1.02);
  }

  .featured-badge {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    background: var(--accent-gradient);
    color: white;
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-lg);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .featured-content {
    padding: 2rem;
  }

  .featured-meta {
    font-size: 0.875rem;
    color: rgb(var(--gray));
    margin-bottom: 0.75rem;
  }

  .featured-title {
    font-size: 1.75rem;
    color: rgb(var(--black));
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .featured-description {
    color: rgb(var(--gray));
    margin: 0 0 1.5rem 0;
    line-height: 1.6;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--accent);
    font-weight: 600;
    font-size: 0.9375rem;
  }

  .read-more svg {
    transition: transform var(--transition-fast);
  }

  .featured-card:hover .read-more svg {
    transform: translateX(4px);
  }

  /* Section Title */
  .section-title {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: rgb(var(--black));
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: rgb(var(--surface));
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .post-card a {
    display: block;
    text-decoration: none;
  }

  .post-image {
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-meta {
    font-size: 0.8125rem;
    color: rgb(var(--gray));
    margin-bottom: 0.5rem;
  }

  .post-title {
    font-size: 1.125rem;
    color: rgb(var(--black));
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
  }

  .post-description {
    font-size: 0.9375rem;
    color: rgb(var(--gray));
    margin: 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 2rem 0 3rem;
    }

    .page-header h1 {
      font-size: 2.25rem;
    }

    .featured-image img {
      height: 250px;
    }

    .featured-title {
      font-size: 1.375rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
